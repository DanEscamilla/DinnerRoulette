{
  "name": "Dinner Roulette",
  "description": "Extension to pick a restaurant in the UberEats website",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Dinner roulette configuration",
    "default_popup": "./index.html",
    "default_icon": {
      "16": "/logos/16.png",
      "32": "/logos/32.png",
      "48": "/logos/48.png",
      "128": "/logos/128.png"
    }
  },
  "icons": {
    "16": "/logos/16.png",
    "32": "/logos/32.png",
    "48": "/logos/48.png",
    "128": "/logos/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ubereats.com/*", "https://ubereats.com/*"],
      "js": ["./static/js/content.bundle.js"]
    }
  ],
  "permissions": ["storage", "tabs"]
}
